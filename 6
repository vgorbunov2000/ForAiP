#include <iostream>
using namespace std;

int main()
{
	setlocale(0, "");
	int a, b;
	cout << "Введите число:";
	cin >> a;
	cout << "Введите число:";
	cin >> b;
	int P = a + a + b + b;
	cout << "Периметр квадрата=" <<P<< endl;
	int f;
	cout << "Введите число:";
	cin >> f;
	int S = f * f;
	cout << "Площадь квадрата=" << S << endl;
	return 0;
}
